<script>
    var socket = io();
    socket.on('roomAll', function(activeRooms) {
        console.log("Room all function");
        var res = activeRooms.split(" ");
        for(var i=1; i<res.length; i++) {
            var ul = document.getElementById('room_list');
            var li = document.createElement("l1");
            var element = document.createElement("div");
            element.setAttribute('class','box boxing1');
            element.setAttribute('href', res[i]);
            li.appendChild(element);
            ul.appendChild(li);
        }
});
</script>


<div id="rooms">
<h1 align="center">Active rooms</h1>
<ul id="room_list">
</ul>
